{{#if options}}
  <ul class="absolute pointer-events-none top-11 left-0 right-0 z-10 transform translate-x-[20px] opacity-0 dropdown w-full bg-gray-800 divide-gray-500 divide-y-[1px]">
    {{#each options}}
      {{#if @first}}
        <div class="flex justify-between content-center p-3">
          <div class="w-[32px]"></div>
          <h1 class="flex content-center text-neutral-300 py-[4px]">{{text}}</h1>
          {{> cross id='close_dropdown'}}
        </div>
      {{else}}
        <li
          class="text-center bg-gray-700 text-neutral-300 py-3 hover:animate-fromRight hover:bg-gray-800"
        >
          <a href="/admin/instructors?orderby={{orderby}}&limit={{limit}}&page={{page}}">{{text}}</a>
        </li>
      {{/if}}
    {{/each}}
  </ul>
{{/if}}