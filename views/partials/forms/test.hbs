<form
  class="w-full rounded px-8 mb-4 sm:mt-0 sm:h-auto"
  enctype="multipart/form-data"
  action="/test"
  method="POST"
>
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
      Pseudo
    </label>
    <input
      class="border-2 shadow appearance-none rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      id="username"
      type="text"
      name="firstname"
      placeholder="Pseudo"
    />
    <p class="invisible text-red-500 text-xs italic">Please choose a password.</p>
  </div>
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
      Email
    </label>
    <input
      class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
      id="email"
      type="email"
      name="email"
      placeholder="Email"
    />
    <p class="invisible text-red-500 text-xs italic">Please choose a password.</p>
  </div>
      <div class="flex items-center justify-between">
         <button id="test" class="w-full bg-green-500 flex items-center justify-center hover:bg-green-700 active:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
           {{> loader}}
           S'inscrire
         </button>
      </div>
</form>